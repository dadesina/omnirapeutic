{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint . --ext .ts",
    "postinstall": "prisma generate",
    "load-test:setup": "createdb omnirapeutic_load_test && DATABASE_URL=postgresql://postgres:postgres@localhost:5432/omnirapeutic_load_test npx prisma migrate deploy && npm run load-test:seed",
    "load-test:seed": "ts-node infrastructure/load-tests/seed-test-data.ts",
    "load-test:scenario1": "artillery run infrastructure/load-tests/scenarios/high-contention.yml --output infrastructure/load-tests/report-contention.json",
    "load-test:scenario2": "artillery run infrastructure/load-tests/scenarios/high-throughput.yml --output infrastructure/load-tests/report-throughput.json",
    "load-test:scenario3": "artillery run infrastructure/load-tests/scenarios/mixed-operations.yml --output infrastructure/load-tests/report-mixed.json",
    "load-test:report": "artillery report infrastructure/load-tests/report-contention.json && artillery report infrastructure/load-tests/report-throughput.json && artillery report infrastructure/load-tests/report-mixed.json",
    "load-test:verify": "PGPASSWORD=postgres psql postgresql://postgres:postgres@localhost:5432/omnirapeutic_load_test -f infrastructure/load-tests/verify-integrity.sql",
    "load-test:all": "npm run load-test:setup && npm run load-test:scenario1 && npm run load-test:scenario2 && npm run load-test:scenario3 && npm run load-test:report && npm run load-test:verify"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "artillery": "^2.0.27",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
