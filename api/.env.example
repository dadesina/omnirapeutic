# Environment Configuration Template
# Copy this file to .env and fill in the actual values

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration (PostgreSQL/Aurora)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD_HERE@omnirapeutic-production.cluster-c65q0emgwv43.us-east-1.rds.amazonaws.com:5432/omnirapeutic?schema=public

# JWT Configuration
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY=15m

# AWS Configuration (for ECS deployment)
DB_HOST=omnirapeutic-production.cluster-c65q0emgwv43.us-east-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=omnirapeutic
DB_USER=postgres
# DB_PASSWORD loaded from AWS Secrets Manager in production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5
